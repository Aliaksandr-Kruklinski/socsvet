<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("Links", required: false)
</head>
<body>
    <div id="page_layout">
        <div id="header">
            <div class="LogButtons">
                @Html.LogButtons(User.Identity.IsAuthenticated, User.IsInRole("admin"), Url.RequestContext.RouteData.Values["action"].ToString())  
            </div>
            <div class="title">
                @Html.RouteLink("Panda Quest", new { controller = "Home", action = "Index" }, new { @id = "Button-white" })
            </div>
        </div>
        <div id="Menu">
            @{ Html.RenderAction("Menu", "Menu"); }
        </div>
        <div id="content">
            @RenderBody()
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
